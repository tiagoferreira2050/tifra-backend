generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  NEW
  PREPARING
  OUT_FOR_DELIVERY
  FINISHED
  CANCELED
}

model Store {
  id          String   @id @default(uuid())
  userId      String
  name        String
  description String?      // ‚úÖ ADICIONADO (Minha Loja / Card√°pio P√∫blico)
  subdomain   String   @unique
  address     String?
  logoUrl     String?
  coverImage  String?
  createdAt   DateTime @default(now())

  categories Category[]
  products   Product[]
  orders     Order[]
  customers  Customer[]

  // üîπ RELA√á√ÉO 1:1 COM CONFIGURA√á√ïES
  settings StoreSettings?

  user User @relation(fields: [userId], references: [id])

  @@index([subdomain])
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())

  stores Store[]
}

model Category {
  id        String   @id @default(uuid())
  storeId   String
  name      String
  createdAt DateTime @default(now())
  active    Boolean  @default(true)
  order     Int      @default(0)

  store    Store     @relation(fields: [storeId], references: [id])
  products Product[]

  @@index([storeId])
}

model Product {
  id          String   @id @default(uuid())
  categoryId  String
  storeId     String

  name        String
  price       Float
  description String?
  imageUrl    String?
  active      Boolean  @default(true)

  order Int @default(0)
  pdv   String? @default("")

  createdAt DateTime @default(now())

  category           Category            @relation(fields: [categoryId], references: [id])
  store              Store               @relation(fields: [storeId], references: [id])
  productComplements ProductComplement[]

  // ‚úî RELA√á√ÉO J√Å EXISTENTE ‚Äî MANTIDA
  orderItems OrderItem[] @relation("ProductToOrderItems")

  @@index([categoryId])
  @@index([storeId])
}

model ComplementGroup {
  id          String   @id @default(uuid())
  name        String
  required    Boolean  @default(false)
  min         Int      @default(0)
  max         Int      @default(1)
  type        String   @default("multiple")
  description String?  @default("")
  active      Boolean  @default(true)

  createdAt DateTime @default(now())

  items              Complement[]
  productComplements ProductComplement[]
}

model Complement {
  id          String   @id @default(uuid())
  groupId     String
  name        String
  price       Float    @default(0)
  active      Boolean  @default(true)

  imageUrl    String?
  description String?

  createdAt DateTime @default(now())

  group              ComplementGroup     @relation(fields: [groupId], references: [id])
  productComplements ProductComplement[]

  @@index([groupId])
}

model ProductComplement {
  id           String @id @default(uuid())
  productId    String
  groupId      String
  complementId String?

  order  Int     @default(0)
  active Boolean @default(true)

  product    Product         @relation(fields: [productId], references: [id])
  group      ComplementGroup @relation(fields: [groupId], references: [id])
  complement Complement?     @relation(fields: [complementId], references: [id])

  @@unique([productId, groupId])
  @@index([productId])
  @@index([groupId])
}

model Customer {
  id        String   @id @default(uuid())
  storeId   String

  name      String
  phone     String?
  address   String?

  createdAt DateTime @default(now())

  store  Store  @relation(fields: [storeId], references: [id])
  orders Order[]

  @@index([storeId])
  @@index([phone])
}

model Order {
  id        String @id @default(uuid())
  storeId   String

  /// üî¢ C√≥digo visual do pedido (P0001, P0002 ou n¬∫ iFood)
  orderCode String? @unique

  status OrderStatus @default(NEW)

  total         Float  @default(0)
  paymentMethod String?
  deliveryFee   Float? @default(0)

  createdAt   DateTime @default(now())
  finalizedAt DateTime?

  // üî¥ CAMPOS DE CANCELAMENTO
  canceledAt   DateTime?
  cancelReason String?
  canceledBy   String? // STORE | CUSTOMER | SYSTEM

  customerId String?
  customer   Customer? @relation(fields: [customerId], references: [id])

  store Store @relation(fields: [storeId], references: [id])

  items OrderItem[]

  @@index([storeId])
  @@index([status])
}

model OrderItem {
  id        String @id @default(uuid())
  orderId   String
  productId String

  quantity  Int    @default(1)
  unitPrice Float

  // üîí MANTIDO para n√£o quebrar nada
  complements Json?

  createdAt DateTime @default(now())

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation("ProductToOrderItems", fields: [productId], references: [id])

  @@index([orderId])
  @@index([productId])
}

model StoreSettings {
  id String @id @default(uuid())

  storeId String @unique

  isOpen Boolean @default(true)

  openTime  String
  closeTime String

  deliveryFee   Float @default(0)
  minOrderValue Float @default(0)

  estimatedTime String @default("30-45 min")
  whatsapp      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  store Store @relation(fields: [storeId], references: [id])
}
